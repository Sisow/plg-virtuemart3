<?xml version="1.0" encoding="UTF-8" ?>
<extension version="2.5" type="plugin" group="vmpayment" method="upgrade">
    <name>Buckaroo (former Sisow) Visa</name>
    <creationDate>September 12 2022</creationDate>
    <author>Buckaroo</author>
    <authorUrl>https://www.buckaroo.nl</authorUrl>
    <copyright>Copyright (C) 2022 Buckaroo B.V. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>5.4.1</version>
    <description>Accept Visa with Buckaroo (former Sisow) in your store</description>
    <files>
        <filename plugin="sisow_visa">sisow_visa.php</filename>
        <filename plugin="sisow_visa">visa.png</filename>
        <folder>language</folder>
    </files>
    <vmconfig>
        <fields name="params">
            <fieldset name="basic">
                <field class="level1" type="vmtitle" default="VMPAYMENT_SISOW_VISA_BASIC_PARAMS"/>
				<field class="api live required" name="sisow_merchantid" type="text" size="80" default=""
                       label="VMPAYMENT_SISOW_VISA_MERCHANTID"/>
                <field class="api live required" name="sisow_merchantkey" type="text" size="80" default=""
                       label="VMPAYMENT_SISOW_VISA_MERCHANTKEY"/>
			   <field class="api live" name="sisow_shopid" type="text" size="80" default=""
                       label="VMPAYMENT_SISOW_VISA_MERCHANTSHOPID"/>
					   
				<field class="" name="sisow_testmode" type="radio" default="1" label="VMPAYMENT_SISOW_VISA_TESTMODE"
                       description="VMPAYMENT_SISOW_VISA_TESTMODE_DESC">
                    <option value="0">VMPAYMENT_SISOW_VISA_TESTMODE_LIVE</option>
                    <option value="1">VMPAYMENT_SISOW_VISA_TESTMODE_TEST</option>
                </field>
					  
                <!-- Payment method settings -->
                <field type="vmtitle" default="VMPAYMENT_SISOW_VISA_SETTINGS" description="VMPAYMENT_SISOW_VISA_SETTINGS_DESC"/>
                <field class="api live" name="sisow_description" type="text" size="80" default=""
                       label="VMPAYMENT_SISOW_VISA_DESCRIPTION" description="VMPAYMENT_SISOW_VISA_DESCRIPTION"/>
                       <field name="sisow_payment_logos" class="payment_logo" default="0" type="list"
                            label="VMPAYMENT_SISOW_VISA_LOGO" description="VMPAYMENT_SISOW_VISA_LOGO_DESC">
                     <option value="0">COM_VIRTUEMART_NO</option>
                     <option value="1">COM_VIRTUEMART_YES</option>
                     </field>
				<field name="status_pending" type="vmorderstate" scope="com_virtuemart" default="U"
                       label="VMPAYMENT_SISOW_VISA_STATUSPENDING" description="VMPAYMENT_SISOW_VISA_STATUSPENDING_DESC"/>
			    <field name="status_success" type="vmorderstate" scope="com_virtuemart" default="U"
                       label="VMPAYMENT_SISOW_VISA_STATUSSUCCESS" description="VMPAYMENT_SISOW_VISA_STATUSSUCCESS_DESC"/>
				<field name="status_cancelled" type="vmorderstate" scope="com_virtuemart" default="U"
                       label="VMPAYMENT_SISOW_VISA_STATUSCANCELLED" description="VMPAYMENT_SISOW_VISA_STATUSCANCELLED_DESC"/>
				<field name="status_expired" type="vmorderstate" scope="com_virtuemart" default="U"
                       label="VMPAYMENT_SISOW_VISA_STATUSEXPIRED" description="VMPAYMENT_SISOW_VISA_STATUSEXPIRED_DESC"/>
				<field name="status_failure" type="vmorderstate" scope="com_virtuemart" default="U"
                       label="VMPAYMENT_SISOW_VISA_STATUSFAILURE" description="VMPAYMENT_SISOW_VISA_STATUSFAILURE_DESC"/>
				<field name="status_reversed" type="vmorderstate" scope="com_virtuemart" default="U"
                       label="VMPAYMENT_SISOW_VISA_STATUSREVERSED" description="VMPAYMENT_SISOW_VISA_STATUSREVERSED_DESC"/>
				<field name="status_refund" type="vmorderstate" scope="com_virtuemart" default="U"
                       label="VMPAYMENT_SISOW_VISA_STATUSREFUND" description="VMPAYMENT_SISOW_VISA_STATUSREFUND_DESC"/>
            
				<field type="vmtitle" default="VMPAYMENT_SISOW_VISA_RESTRICTIONS"
                       description="VMPAYMENT_SISOW_VISA_RESTRICTIONS_DESC"/>
				<field name="countries" multiple="true" type="vmcountries" scope="com_virtuemart" default=""
                       label="VMPAYMENT_SISOW_VISA_COUNTRIES" description="VMPAYMENT_SISOW_VISA_COUNTRIES_DESC"/>
                <field name="payment_currency" type="vmacceptedcurrency" default="" label="VMPAYMENT_SISOW_VISA_CURRENCY"
                       description="VMPAYMENT_SISOW_VISA_CURRENCY_DESC"/>	  
				<field name="min_amount" type="text" label="VMPAYMENT_SISOW_VISA_MIN_AMOUNT"
                       description="VMPAYMENT_SISOW_VISA_MIN_AMOUNT_DESC"/>
                <field name="max_amount" type="text" label="VMPAYMENT_SISOW_VISA_MAX_AMOUNT"
                       description="VMPAYMENT_SISOW_VISA_MAX_AMOUNT_DESC"/>
                <field name="cost_per_transaction" type="text" label="VMPAYMENT_SISOW_VISA_COST_PER_TRANSACTION"
                       description="VMPAYMENT_SISOW_VISA_COST_PER_TRANSACTION_DESC"/>
                <field name="cost_percent_total" type="text" label="VMPAYMENT_SISOW_VISA_COST_PERCENT_TOTAL"
                       description="VMPAYMENT_SISOW_VISA_COST_PERCENT_TOTAL_DESC"/>
                <field name="tax_id" type="vmtaxes" scope="com_virtuemart" label="VMPAYMENT_SISOW_VISA_TAX"
                       description="VMPAYMENT_SISOW_VISA_TAX_DESC"/>
			</fieldset>
        </fields>
    </vmconfig>
</extension>
